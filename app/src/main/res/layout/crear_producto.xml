<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Codigo" />

    <EditText
        android:id="@+id/etStockMin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stock minimo"
        android:inputType="number" />

    <EditText
        android:id="@+id/etStockMaximo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stock maximo"
        android:inputType="number" />

    <EditText
        android:id="@+id/etStockActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stock actual"
        android:inputType="number" />

    <EditText
        android:id="@+id/etPrecioVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio venta"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etPrecioCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio compra"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnSelectTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipos" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />
</LinearLayout>
